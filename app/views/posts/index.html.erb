<%= image_tag 'drag.gif',:align=> "center", height:200,width:200,id: "drg"%>
<% end %>
<% if user_signed_in? %>
<!--section-start-->
  <p id="intro">
    Hello
    <%= current_user.name %>
    <br/>
    <h2>
      Share your inspiration and see what's inspiring others.
    </h2>
  </p>
<% else %>
  <p id="intro">
    <h3 style="text-align:center">What's your tag?<h3>
    
    <h2 style="text-align:center">
      Share your inspiration and see what's inspiring others.
    <h2>
  </p>
<% end %>
      <!--section end-->
<div id="posts">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post_image">
        <%= link_to (image_tag post.image.url(:small)), post %>
      </div>
      <div class="post_content">
        <div class="title">
          <h2>
            <%= link_to post.title, post %>
          </h2>
        </div>
        <div class="data clearfix">
          <p class="username">
            Shared by
            <%= post.user.name %>
          </p>
          <p class="buttons">
            <span>
              <i class="fa fa-comments-o"></i>
              <%= post.comments.count %>
            </span>
            <span>
              <i class="fa fa-thumbs-o-up"></i>
              <%= post.get_likes.size %>
            </span>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
